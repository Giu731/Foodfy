{% extends "admin/session/layout_session.njk" %}

{% block head %}
    <title>Login - Foodfy</title>
{% endblock head %}


{% block content %}
<main>
    <form class = "Session user" method = "POST" action = "/admin/users/forgot-password">
        <section class="login container form">
            <div class = "Head">
                <h3>Esqueceu a Senha?</h3>
            </div>
            <div class = "fields">
                <div class = "item">
                    <div>Email</div>
                    <div>    
                        <input
                            type = "email"
                            name = "email"
                            value = "{{user.email}}"
                            placeholder = "Digite seu email para recuperar sua senha"
                        >
                    </div>
                </div>
                <button class = "button" type = "submit">Recuperar</button>
            </div>

        </section>
    </form>
</main>
{% endblock content %}