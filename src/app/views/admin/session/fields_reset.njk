<div class = "item">
    <div>Email</div>
    <div>    
        <input
            type = "email"
            id = "input"
            name = "email"
            value = "{{user.email}}"
            placeholder = "Digite seu email"
        >
    </div>
</div>

<div class = "item">
    <div>Nova Senha</div>
    <div>    
        <input
            type = "password"
            name = "password"
            value = "{{user.password}}"
            placeholder = "Digite sua nova senha"
        >
    </div>
</div>

<div class = "item">
    <div>Repetir Senha</div>
    <div>    
        <input
            type = "password"
            name = "passwordRepeat"
            placeholder = "Repita nova senha"
        >
    </div>
</div>

<input type="hidden" name = "token" value = "{{token}}">