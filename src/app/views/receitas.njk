{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock head %}


{% block content %}
        <main>
            <section class="receitas">
            {% for item in items %}
                <div class="receita" id="{{item.id}}">
                    <div class="fotoReceita">
                        <img 
                        src="{{item.image[0].src}}" 
                        alt="imagem ilustrativa da receita: {{item.title}}"
                        id = {{item.id}}
                        onclick = "Redirect.goToPage(event)">
                    </div>
                    <div class="nomeReceita">
                        <h3>{{item.title}}</h3>
                    </div>
                    <div class="criadorReceita">
                        <p>por {{item.chef_name}}</p>
                    </div>
                </div>
            {% endfor %}
            </section>

            
        </main>
{% endblock content %}


 