{% extends "layout.njk" %}

{% block head %}
    <title>{{item.title}} - Foodfy</title>
{% endblock head %}



{% block content %}
    <main>
        <section class="recipesPage">
            <div class = "gallery">
            <div class = "highlight">
                {% if not files[0] %}
                    <img id = "recipe" src = "http://placehold.it/500x500?text=PRODUTO SEM FOTO"/>
                {% else %}
                    <img id = "recipe" src = "{{files[0].src}}" alt = "{{files[0].name}}">
                {% endif %}
            </div>
            
            <div class = "gallery-preview">
                {% for image in files %}
                    <img 
                        src = "{{image.src}}"
                        alt = "{{image.name}}"
                        {% if loop.index0 == 0 %}
                        class = "active"
                        {% endif %}
                        onclick = "ImageGallery.setImage(event)"
                    >
                {% endfor %}
            </div>   
        </div>
            <div class="cooker-info">
                <div class="title">
                    <h1>{{item.title}}</h3>
                </div>
                <div class="author">
                    <h2>{{item.author}}</h2>
                </div>        
            </div>
            <div class="recipe">
                <div class="ingredients">
                    <h3>Ingredientes<button class="visibility">ESCONDER</button></h3>
                    <ul class="recipes-info" id="ingredients-list ">
                        {% for ingredient in item.ingredients %}
                            <li>{{ingredient}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="steps">
                    <h3>Preparo<button class="visibility">ESCONDER</button></h3>
                    <ul class="recipes-info" id="preparation-steps">
                        {% for step in item.preparation %}
                            <li>{{step}}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class ="information">
                    {% if item.information %}
                        <h3>Informações<button class="visibility">ESCONDER</button></h3>
                        <div class="recipes-info">
                            <p>{{item.information}}</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>

            
        </main>
{% endblock content %}


 